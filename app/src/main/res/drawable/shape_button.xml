<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:color="#0000FF">
            <stroke
                android:width="2dp"
                android:color="#FF878D9E" />
            <corners
                android:radius="16dp" />
            <gradient
                android:type="linear"
                android:startColor="#FF20A376"
                android:endColor="#FF066F65"
                android:angle="270" />
        </shape>
    </item>
    <item>
        <shape android:color="#0000FF">
            <corners
                android:radius="10dp" />
            <solid
                android:color="#FF009688"/>
        </shape>
    </item>
</selector>